@using Zetbox.Client.ASPNET
@using Zetbox.Parties.ASPNET
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <br />
            <div id="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src='../../Content/themes/base/images/logo.png' /></a>
            </div>
        </div>
        <div id="content">
            <div id="primary" class="maincontent">
                @RenderBody()
            </div>
            <div id="secondary" class="sidebar">
                @using (Html.Widget(@Resources.Navigation))
                {
                    <ul>
                        <li>@Html.ActionLink(@Resources.Home, "Index", "Home")</li>
                        <li>@Html.ActionLink(@Resources.About, "About", "Home")</li>
                        <li>@Html.ActionLink(@Resources.Receipts, "Index", "Receipt")</li>
                        <li>@Html.ActionLink(@Resources.Transactions, "Index", "Transaction")</li>
                    </ul>
                }
                @using (Html.Widget(@Resources.Logon))
                {
                    @Html.Partial("_LogOnPartial")
                }
                @using (Html.Widget(@Resources.Imprint))
                { 
                    <p>
                        dasz.at OG
                        <br />
                        Ignaz-Köck-Straße 10/4108<br />
                        1210 Wien
                        <br />
                        <br />
                        David Schmitt: +43 664 2602670<br />
                        Arthur Zaczek: +43 664 2357181<br />
                        <br />
                        <a href="mailto:office@dasz.at">office@dasz.at</a>
                        <br />
                        <a href="http://dasz.at">http://dasz.at</a>
                    </p>
                    <br />
                }
            </div>
            <div class="footer">
                <div class="footer_content">
                    @DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()
                </div>
                <div class="footer_email">
                    <a href="mailto:office@dasz.at">office@dasz.at</a>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            // http://www.hanselman.com/blog/GlobalizationInternationalizationAndLocalizationInASPNETMVC3JavaScriptAndJQueryPart1.aspx
            // Use above link to improve this
            $(".datePicker").datepicker({ showOn: 'focus', dateFormat: 'dd.mm.yy' });
            $("input[type=submit], input[type=button], .button").button();
        });
    </script>
</body>
</html>
